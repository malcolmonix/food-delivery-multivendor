# Production Environment Configuration - Chop Chop & MenuVerse Platform
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION BRANDING
# =============================================================================
CHOPCHOP_APP_NAME="Chop Chop"
CHOPCHOP_DESCRIPTION="Fast Food Delivery at Your Fingertips"
MENUVERSE_APP_NAME="MenuVerse"
MENUVERSE_DESCRIPTION="Restaurant Management Made Simple"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://chopchop_user:your_secure_password@postgres:5432/chopchop_db
POSTGRES_DB=chopchop_db
POSTGRES_USER=chopchop_user
POSTGRES_PASSWORD=your_secure_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
API_URL=https://chopchop.com/api

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://chopchop.com,https://menuverse.com
SESSION_SECRET=your_session_secret_here

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal Configuration (if using PayPal)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=production

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 Configuration (alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key

# OneSignal Configuration
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# =============================================================================
# APPLICATION SPECIFIC SETTINGS
# =============================================================================
# App URLs
NEXT_PUBLIC_CHOPCHOP_URL=https://chopchop.com
NEXT_PUBLIC_MENUVERSE_URL=https://menuverse.com
NEXT_PUBLIC_ADMIN_URL=https://chopchop.com/admin
NEXT_PUBLIC_API_URL=https://chopchop.com/api

# App Configuration
CHOPCHOP_LOGO_URL=https://chopchop.com/logo.png
MENUVERSE_LOGO_URL=https://menuverse.com/logo.png
SUPPORT_EMAIL=support@chopchop.com
CONTACT_PHONE=+1234567890

# Currency and Localization
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
TIMEZONE=America/New_York

# Business Configuration
COMMISSION_RATE=0.10
DELIVERY_CHARGES=2.99
TAX_RATE=0.08
MINIMUM_ORDER_AMOUNT=10.00

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Social Login
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# =============================================================================
# DEVELOPMENT SETTINGS (for development environment only)
# =============================================================================
# Uncomment for development
# NODE_ENV=development
# CHOKIDAR_USEPOLLING=1
# NEXT_PUBLIC_SERVER_URL=http://localhost:4000/

# =============================================================================
# SSL AND SECURITY
# =============================================================================
# SSL Configuration (automatically managed by deployment script)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database Backup
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# S3 Backup Storage
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1